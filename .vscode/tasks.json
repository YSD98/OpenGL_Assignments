{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "D:\\Software\\MSYS2\\mingw32\\bin\\g++.exe",
            "args": [
                "-g",
                "-std=c++17",
    		    "-I${workspaceFolder}/External/include",
		        "-L${workspaceFolder}/External/lib",
                
                "${workspaceFolder}/1_Window/\\*.cpp",          //Change to Main.cpp Parent folder direcctory before execution
                
                "-lopengl32",
                "-lglew32",
                "-lglfw3dll",
                "-o",
                
                "${workspaceFolder}/Output.exe"              //Executable file location
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
